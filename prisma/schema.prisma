generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Localidad {
  cod_postal Int @id @unique
  nombre  String
}

model TipoInmueble{
  id_tipoinmueble Int    @id @default(autoincrement())
  descripcion String
}

model Persona {
  id_usuario Int @id @default(autoincrement())
  nombre String
  apellido String
  email String
  password String
  tipo_usuario TipoUsuario 
  telefono String
  domicilio String
}

enum TipoUsuario {
  Huesped
  Propietario
}

model Servicio {
  id_servicio Int @id @default(autoincrement())
  descripcion_servicio String @unique
}
